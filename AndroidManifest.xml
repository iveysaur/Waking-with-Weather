<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.iveysaur.WakingWithWeather"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="Waking with Weather" android:icon="@drawable/ic_launcher">
        <activity android:name="MainActivity"
			android:label="Waking with Weather"
			>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FileChooser"
			android:label="File Chooser"
			android:parentActivityName=".MainActivity"
			>
        </activity>
        <activity android:name=".AllAlarms"
			android:label="All Alarms"
			android:parentActivityName=".MainActivity"
			>
        </activity>
    </application>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest>
